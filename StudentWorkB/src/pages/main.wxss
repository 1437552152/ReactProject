.shopCarts {
  width: 1200px;
  margin: 0 auto;
  margin-top: 40px;
}
.shopCarts h3 {
  border-bottom: 2px solid #eee;
}
.shopCarts h3 > span {
  border-bottom: 2px solid #f40;
}
.shopCarts .car-list,
.shopCarts .goods-list {
  overflow: hidden;
  min-width: 870px;
}
.shopCarts li {
  list-style: none;
  display: flex;
}
.shopCarts li.li-checkbox,
.shopCarts li.li-info {
  float: left;
}
.shopCarts li.li-info {
  width: 460px;
  margin-left: 20px;
}
.shopCarts li.li-price,
.shopCarts li.li-num,
.shopCarts li.li-amount,
.shopCarts li.li-operation {
  float: right;
  width: 100px;
}
.shopCarts .goods-list .li-price {
  flex-direction: column;
}
.shopCarts .goods-num-btn {
  margin-right: 7px;
  margin-left: 7px;
  font-size: 16px;
  cursor: pointer;
}
.shopCarts .allSelect {
  margin-top: 4px;
  margin-right: 5px;
}
.shopCarts .goods-list .goods-num {
  width: 30px;
  text-align: center;
  box-shadow: none;
  outline: none;
  border: 1px solid #ccc;
  border-radius: 4px;
}
.shopCarts .goods-list .goods-original {
  color: #888;
  text-decoration: line-through;
}
.shopCarts .goods-bottom {
  overflow: hidden;
  min-width: 870px;
  margin-top: 20px;
  background-color: #e5e5e5;
  height: 50px;
  line-height: 50px;
}
.shopCarts .goods-bottom .total-check-all,
.shopCarts .goods-bottom .total-del-all {
  float: left;
}
.shopCarts .goods-bottom .total-del-all,
.shopCarts .goods-bottom .total-checked {
  margin-left: 20px;
}
.shopCarts .goods-bottom .total-nums,
.shopCarts .goods-bottom .total-checked {
  float: right;
}
.shopCarts .goods-bottom .goods-checked-num,
.shopCarts .goods-bottom .goods-nums {
  padding: 0 5px;
  color: #f40;
}
